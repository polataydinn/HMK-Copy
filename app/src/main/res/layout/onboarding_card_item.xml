<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/onboarding_item_image"
        android:layout_width="0dp"
        android:layout_height="312dp"
        android:layout_marginHorizontal="32dp"
        tools:src="@drawable/onboarding_backgoround_item1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onboarding_item_top_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Siparişinizi verin siz gelmeden hazır olsun"
        android:layout_marginTop="64dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/onboarding_item_image"
        app:layout_constraintStart_toStartOf="@+id/onboarding_item_image"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_item_image" />

    <TextView
        android:id="@+id/onboarding_item_bottom_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/transparent_white_55"
        tools:text="Çıktısını almak istediğiniz belgeler için saatlerce sıra beklemenize gerek yok"
        app:layout_constraintEnd_toEndOf="@+id/onboarding_item_top_description"
        app:layout_constraintStart_toStartOf="@+id/onboarding_item_top_description"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_item_top_description" />


</androidx.constraintlayout.widget.ConstraintLayout>