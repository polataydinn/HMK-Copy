<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hmkcopy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primary_button_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_button_background</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_background</item>
        <item name="colorPrimaryVariant">@color/primary_background</item>
        <item name="colorOnPrimary">@color/primary_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_background</item>
        <item name="colorSecondaryVariant">@color/primary_background</item>
        <item name="colorOnSecondary">@color/primary_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextRegular" >
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="MyTabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#59000000</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>